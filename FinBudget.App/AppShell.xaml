<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinBudget.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinBudget.App.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="FinBudget.App">

    <FlyoutItem>
        <ShellContent
            Title="Accounts"
            ContentTemplate="{DataTemplate local:AccountsPage}"
            Route="AccountsPage" />
        
        <ShellContent
            Title="Categories"
            ContentTemplate="{DataTemplate local:CategoriesPage}"
            Route="CategoriesPage" />

        <ShellContent
            Title="Transactions"
            ContentTemplate="{DataTemplate local:TransactionsPage}"
            Route="TransactionsPage" />
    </FlyoutItem>

</Shell>
